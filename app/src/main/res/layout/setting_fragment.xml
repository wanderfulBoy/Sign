<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="18dp"
        android:background="@color/grey7" />


    <RelativeLayout
        android:id="@+id/banbenjianche"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:background="@color/white">

        <TextView
            android:id="@+id/version_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="已是最新版本 V1.02"
            android:textColor="#ff333333"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/updateVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:text="版本检测"
            android:textSize="14.0sp" />
    </RelativeLayout>
    <View style="@style/entry_line" />
    <RelativeLayout
        android:id="@+id/re_watchversion"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_watch_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="更新日志"
            android:textSize="14.0sp" />

    </RelativeLayout>

    <View style="@style/entry_line" />

    <RelativeLayout
        android:id="@+id/more_rela"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@mipmap/ic_list_item"
            android:textColor="#ff333333"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:text="关于"
            android:textSize="14.0sp" />
    </RelativeLayout>

    <View style="@style/entry_line" />

</LinearLayout>